@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using CarShop.Components
@using CarShop.Models
@using Smidge.TagHelpers

@{
	Layout = null;
    var settings = Umbraco.ContentAtRoot().DescendantsOrSelf<Settings>().First();
    var content = Umbraco.AssignedContentItem;
    var currentCulture = Umbraco.GetDictionaryValue("Culture");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Car Shop</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await Component.InvokeAsync("Metadata", new NavigationViewModel{Settings = settings, Content = content})
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
   
</head>
<body>

@await Component.InvokeAsync("Navigation", new NavigationViewModel{Settings = settings, Content = content, Culture = currentCulture, AvailableCultures = null })

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<div class="container">
    @await Component.InvokeAsync("Footer", settings)
</div>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>