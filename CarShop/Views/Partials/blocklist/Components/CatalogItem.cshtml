@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Web.Common.PublishedModels;

@{
    var item = (CatalogItem)Model.Content;
}
<div class ="row gx-4 gx-lg-5 justify-content-center pt-5">
    <div class = "col-md-10 col-lg-8 col-xl-7">
        <div class="container border p-4">
            <div class="row">

                @if (!string.IsNullOrWhiteSpace(@item.CarName))
                {
                    <h1>@item.CarName</h1>
                }

                @if (item.CarImage != null)
                {
                    <img src="@item.CarImage.Url()" alt="@item.CarImage.Name" class="img-fluid">
                }

                @if (item.CarDescription != null)
                {
                    <p>@item.CarDescription</p>
                }

                @if (item.CarLink != null)
                {
                    <a href="@item.CarLink.Url" class="btn btn-primary">More information...</a>
                }

            </div>
        </div>
    </div>
</div>
